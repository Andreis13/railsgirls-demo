
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author Email</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.user.email %></td>
              <td>
                <%= link_to 'View', post, :class => 'btn btn-primary btn-xs' %>
                <%= link_to 'Delete', post, :method => :delete, :class => 'btn btn-danger btn-xs' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
