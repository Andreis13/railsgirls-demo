
<div class="row">
  <div class="col-xs-12">

    <div class="panel panel-default">
      <div class="panel-body">
        <h3><%= @post.title %>
          <% if current_user == @post.user %>
            <i><%= link_to 'Delete', @post, :method => :delete %></i>
          <% end %>
        </h3>
        <p><%= @post.body %></p>
        <% rating = @post.rating_by(current_user) %>
        <%= form_for rating, :url => rate_post_path do |f| %>
          <span data-toggle="buttons">
            <% 5.times do |i| %>
              <% checked = i+1 == rating.value %>
              <%= f.label :rating, :class => "btn btn-default#{checked ? ' active' : ''}" do %>
                <%= i+1 %>
                <%= radio_button_tag 'rating[value]', i+1, checked %>
              <% end %>
            <% end %>

          </span>
          <%= f.submit 'Vote!', :class => "btn btn-default btn-small" %>

        <% end %>
      </div>

      <div class="panel-footer">
        <h4>Comments:</h4>
        <% @post.comments.each do |comment| %>
          <p><%= comment.text %></p>
        <% end %>
        <%= form_for [@post, Comment.new] do |f| %>
          <div class="form-group">
            <%= f.label :new_comment %>
            <%= f.text_area :text, :class => "form-control" %>
          </div>
          <%= f.submit 'Leave Comment', :class => "btn btn-primary" %>
        <% end %>

      </div>
    </div>

  </div>
</div>
