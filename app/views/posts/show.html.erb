
<div class="row">
  <div class="col-xs-12">

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <h3><%= @post.title %></h3>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 col-xs-12">
            <%= cl_image_tag @post.image.path, :crop => :fill, :class => "img-thumbnail img-responsive" %>
          </div>
          <div class="col-md-8 col-xs-12">
            <p><%= @post.body %></p>
            <hr/>
            <% rating = @post.rating_by(current_user) %>
            <%= form_for rating, :url => rate_post_path do |f| %>
              <span data-toggle="buttons">

                  <%= f.label :rating, :class => "btn btn-default#{rating.value == 1? ' active' : ''}" do %>
                    <%= radio_button_tag 'rating[value]', 1 %>
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                  <% end %>
                  <%= f.label :rating, :class => "btn btn-default#{rating.value == -1? ' active' : ''}" do %>
                    <%= radio_button_tag 'rating[value]', -1 %>
                    <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                  <% end %>

              </span>
              <%= f.submit 'Votează!', :class => "btn btn-default btn-small" %>

            <% end %>
          </div>
        </div>
      </div>

      <div class="panel-footer">
        <h4>Comentarii:</h4>
        <%= render :partial => 'posts/comment', :collection => @post.comments, :spacer_template => 'posts/comment_spacer' %>

        <%= form_for [@post, Comment.new] do |f| %>
          <div class="form-group">
            <%= f.label  :new_comment, "Comentariu nou"%>
            <%= f.text_area :text, :class => "form-control" %>
          </div>
          <%= f.submit 'Comentează', :class => "btn btn-primary" %>
        <% end %>

      </div>
    </div>

  </div>
</div>
